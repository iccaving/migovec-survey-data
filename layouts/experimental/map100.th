text en "line u:openshaft_MY" "open shaft"
text de "line u:openshaft_MY" "Eingangskessel"
text en "line u:texture" "bedrock wall"
text de "line u:texture" "Felsboden"
text de "line u:flowstone_MY" "fl√§chiger Sinter"

